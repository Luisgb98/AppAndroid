<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        tools:context=".Activity1">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/logo2"
            app:layout_constraintBottom_toTopOf="@+id/imageMusica"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageMusica"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="214dp"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:src="@drawable/logom"
            app:layout_constraintBottom_toTopOf="@+id/buttonPlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Me he ayudado de este link para hacer el botÃ³n invisible con imagen
        https://stackoverflow.com/questions/3402787/how-to-have-a-transparent-imagebutton-android -->

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="424dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/playbutton"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/buttonActivity2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<Button
            android:id="@+id/buttonPause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="424dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/pausebutton"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@+id/buttonStop"
            app:layout_constraintStart_toEndOf="@+id/buttonPlay"
            app:layout_constraintTop_toTopOf="parent" />-->

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="424dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/stopbutton"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/buttonActivity2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonActivity2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="497dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:singleLine="false"
            android:text="Ir al Activity 2"
            android:textColor="#000000"
            app:backgroundTint="#EFD1F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonActivity4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="30dp"
            android:text="Ir al Activity 4"
            android:textColor="#000000"
            app:backgroundTint="#EFD1F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonActivity3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonActivity3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:text="Ir al Activity 3"
            android:textColor="#000000"
            app:backgroundTint="#EFD1F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonActivity2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


